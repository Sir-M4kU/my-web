---
interface Props {
  title: string;
  description: string;
  img: string;
  link: string;
  languages: string[];
}

const { title, description, img, link, languages } = Astro.props;
---

<article
  class="flex mx-4 rounded-lg md:bg-gradient-to-bl bg-gradient-to-tr from-20% via-60% from-white via-pink-600 to-purple-500 md:m-0 md:flex-row flex-col md:w-4/5 md:justify-between"
>
  <div class="px-4 pt-2 pb-4 md:flex md:flex-col md:justify-between">
    <a class="md:hover:underline" href={link}>
      <h2 class="text-2xl uppercase text-center md:my-3 md:text-left font-barlow">
        {title}
      </h2>
    </a>
    <p class="font-extralight text-lg md:flex-grow">
      {description}
    </p>
    <h2 class="text-center uppercase md:text-left font-barlow text-xl underline">Tecnologias</h2>
    <div class="flex gap-4 max-md:justify-center">
      {languages.map((lang) => (
        <p
          class:list={[
            'px-2 rounded-md',
            {
              'bg-sky-500 text-sky-900': lang === 'CSS',
              'bg-amber-400 text-amber-900': lang === 'JavaScript',
              'bg-orange-500 text-orange-900': lang === 'HTML'
            }
          ]}
        >
          {lang}
        </p>
      ))}
    </div>
  </div>
  <img
    class="mx-auto md:max-w-xs md:m-0 rounded-lg"
    src={img}
    alt={`Vista previa del proyecto ${title}`}
  />
</article>
